# Solana RPC URL (Alchemy recommended - 20 req/sec free)
RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MAX_RPC_REQUESTS_PER_SEC=20

# Jupiter API Key (get from https://portal.jup.ag)
JUPITER_API_KEY=your_jupiter_api_key_here

# Wallet private key (base58 encoded) - KEEP SECRET!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Profit thresholds
MIN_PROFIT_USD=10
MAX_SLIPPAGE_TOLERANCE=0.003

# Scanning
SCAN_INTERVAL_MS=1000

# Execution mode
DRY_RUN=true
AUTO_EXECUTE=false

# API Server
ENABLE_API=true
API_PORT=3000
